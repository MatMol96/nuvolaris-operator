import nuvolaris.ingress as ingress
import nuvolaris.testutil as tu
import nuvolaris.kube as kube
import nuvolaris.config as cfg
import logging

#
# This test expect that ingress is already installed
#
cfg.detect()

runtime = cfg.get('nuvolaris.kube')
expected = "*** ingress-nginx already installed...skipping setup"
res = ingress.create()

if runtime == "microk8s":
    namespace = ingress.get_ingress_namespace(runtime)
    service = ingress.get_ingress_service(runtime)
    pod_name = ingress.get_ingress_pod_name(runtime, namespace)
    expected = f"*** ingress-nginx {pod_name} already installed...skipping setup"

assert(expected == res)